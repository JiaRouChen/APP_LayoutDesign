<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_01"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="高屏澎東分署登入畫面"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView_01"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView_01"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="312dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cover" />

    <TextView
        android:id="@+id/textView_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:text="帳號："
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText_1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_01"
        android:layout_alignBaseline="@+id/textView_02"
        android:layout_marginStart="3dp"
        android:layout_marginTop="180dp"
        android:layout_toEndOf="@+id/textView_02"
        android:layout_weight="1"
        android:hint="請輸入帳號"
        android:inputType="text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_02"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="密碼："
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText_02"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_03"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="23dp"
        android:layout_toEndOf="@+id/textView_03"
        android:layout_weight="1"
        android:ems="10"
        android:hint="請輸入密碼"
        android:inputType="text"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextText_02"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:text="學生"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:text="教師"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:text="職工"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button_01"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:text="登入"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_02"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button_01"
        android:layout_alignBottom="@id/button_01"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@id/button_01"
        android:text="註冊"
        android:textSize="18sp" />
</RelativeLayout>